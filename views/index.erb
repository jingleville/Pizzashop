<h2> Hello </h2>
<h3> Welcome to pizzashop </h3>


<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div>
        <%= product.title %>
      </div>

      <div>
        <img src="<%= product.path_to_image %>">
      </div>

      <div>
        <%= product.decription %>
      </div>

      <div>
        Price is: <%= product.price %> rub
      </div>

      <div>
        <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= product.id %>)"> Add to cart </button>
      </div>

      <br />
      
    </div>


  <% end %>
</div>

<br />
